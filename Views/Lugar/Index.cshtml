@model List<SIGEM_TAEX.Models.Lugar>
@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">
    Lugar
    <a href="~/Lugar/AgregarEditar/" class="btn btn-success float-lg-right">Nuevo Lugar</a>
</h2>
<br />


@using (Html.BeginForm("Index", "Lugar", FormMethod.Post,
    new { Criterio = "Frm-Buscar" }))
{
    <div class="text-left">
        @Html.Label("Buscar : ")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info">Buscar</button>
    </div>
}

<table id="DataTablesLanguage" class="table align-items-center table-flush">
    <thead>
        <tr>
            <th style="width : 50px;"> ID</th>
            <th style="width : 150px;">Dirección</th>
            <th style="width : 100px;">Referencia</th>

            <th style="width : 300px">Acciones</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var m in Model)
        {
            <tr>

                <th>@(m.ID_Lugar)</th>
                <th>@(m.Direccion)</th>
                <th>@(m.Referencia )</th>

                <th>
                    <a href="~/Lugar/Ver/@m.ID_Lugar" class="btn btn-xs btn-warning">Detalles</a>
                    <a href="~/Lugar/AgregarEditar/@m.ID_Lugar" class="btn btn-xs btn-primary">Modificar</a>
                    <a onclick="return confirm('Esta seguro que desea eliminabr el registro?...');"
                       href="~/Lugar/Eliminar/@m.ID_Lugar" class="btn btn-xs btn-danger">Eliminar</a>
                </th>


            </tr>
        }
    </tbody>
</table>

