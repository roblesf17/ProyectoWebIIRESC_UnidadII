@model SIGEM_TAEX.Models.Matricula

@{
    ViewBag.Title = "Ver";
}

<h2>Ver</h2>

<h2>Ver</h2>

<ol class="breadcrumb">
    <li><a href="~/Matricula/Index">Matricula </a></li>
    <li> / </li>
    <li class="active">@Model.Estudiante.Nombres @Model.Estudiante.Apellido_Paterno @Model.Estudiante.Apellido_Materno - @Model.Taller.Nombre</li>
</ol>

<div class="card card-body">
    <div class="card-header">Detalles de la Matricula</div>
    <div class="card-body">
        <dl class="dl-horizontal">
            <dt>Id Matricula</dt>
            <dd>@Model.ID_Matricula</dd>

            <dt>Nombre y Apellidos del Estudiante</dt>
            <dd>@(Model.Estudiante.Nombres + " " + Model.Estudiante.Apellido_Paterno + " " + Model.Estudiante.Apellido_Materno )</dd>

            <dt>Taller de la Matricula </dt>
            <dd>@Model.Taller.Nombre </dd>

            <dt>Periodo </dt>
            <dd>@(Model.Periodo.Nombre_Periodo )  </dd>

            <dt>Fecha de Inscripcion</dt>
            <dd>@Model.Fecha_Inscripcion </dd>

            <dt>Costo de Taller </dt>
            <dd>@Model.Costo_Taller </dd>

        </dl>
    </div>
</div>