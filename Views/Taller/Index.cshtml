@model List<SIGEM_TAEX.Models.Taller>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">
    Taller
    <a href="~/Taller/AgregarEditar/" class="btn btn-success float-lg-right">Nuevo Taller</a>
</h2>
<br />

@using (Html.BeginForm("Index", "Taller", FormMethod.Post,
    new { Criterio = "Frm-Buscar" }))
{
    <div class="text-left">
        @Html.Label("Buscar : ")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info">Buscar</button>
    </div>
}

<table id="DataTablesLanguage" class="table align-items-center table-flush">
    <thead>
        <tr>
            <th style="width : 50px;"> ID</th>
            <th style="width : 150px;">Docente</th>
            <th style="width : 100px;">Lugar</th>
            <th style="width : 100px;">Horario</th>
            <th style="width : 100px;">Nombre</th>
            <th style="width : 100px;">Categoria</th>
            <th style="width : 100px;">Cantidad Inscritos</th>
            <th style="width : 100px;">Cupos Disponibles</th>
            <th style="width : 100px;">Fecha Inicio</th>
            <th style="width : 100px;">Fecha Fin</th>
            <th style="width : 100px;">Estado</th>

            <th style="width : 300px">Acciones</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var m in Model)
        {
        <tr>

            <th>@(m.ID_Taller)</th>
            <th>@(m.Docente.Nombres +" " + m.Docente.Apellido_Paterno + " " +  m.Docente.Apellido_Materno)</th>
            <th>@(m.Lugar.Direccion )</th>
            <th>@(m.Horario.Hora + " " + m.Horario.Hora_Fin )</th>
            <th>@(m.Nombre )</th>
            <th>@(m.Categoria )</th>
            <th>@(m.Cantidad_Inscritos )</th>
            <th>@(m.Cupos_Disponibles )</th>
            <th>@(m.Fecha_Inicio )</th>
            <th>@(m.Fecha_Fin )</th>
            <th>@(m.Estado == "A" ? "Activo" : "Inactivo")</th>


            <th>
                <a href="~/Taller/Ver/@m.ID_Taller" class="btn btn-xs btn-warning">Detalles</a>
                <a href="~/Taller/AgregarEditar/@m.ID_Taller" class="btn btn-xs btn-primary">Modificar</a>
                <a onclick="return confirm('Esta seguro que desea eliminabr el registro?...');"
                   href="~/Taller/Eliminar/@m.ID_Taller" class="btn btn-xs btn-danger">Eliminar</a>
            </th>


        </tr>
        }
    </tbody>
</table>