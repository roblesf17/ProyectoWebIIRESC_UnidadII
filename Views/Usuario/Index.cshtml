@model List<SIGEM_TAEX.Models.Usuario>

@{
    ViewBag.Title = "Index";
}

<h2 class="page-header">
    Usuario
    <a href="~/Usuario/AgregarEditar/" class="btn btn-success float-lg-right">Nuevo Usuario</a>
</h2>
<br />

@using (Html.BeginForm("Index", "Usuario", FormMethod.Post,
    new { Criterio = "Frm-Buscar" }))
{
    <div class="text-left">
        @Html.Label("Buscar : ")
        @Html.TextBox("Criterio")
        <button type="submit" class="btn btn-info">Buscar</button>
    </div>
}

<table id="DataTablesLanguage" class="table align-items-center table-flush">
    <thead>
        <tr>
            <th scope="col" class="sort" data-sort="name">Id Usuario</th>
            <th scope="col" class="sort" data-sort="budget">Id Personal</th>
            <th scope="col" class="sort" data-sort="budget">Id Docente</th>
            <th scope="col" class="sort" data-sort="status">Id Estudiante</th>

            <th scope="col" class="sort" data-sort="status">Acciones</th>
        </tr>

    </thead>

    <tbody>
        @foreach (var m in Model)
        {
            <tr>

                <th>@(m.ID_Usuario)</th>
                <th>@(m.Personal_OBUN.Nombres +" " + m.Personal_OBUN.Apellido_Paterno + " " +  m.Personal_OBUN.Apellido_Materno)</th>
                <th>@(m.Docente.Nombres +" " + m.Docente.Apellido_Paterno + " " +  m.Docente.Apellido_Materno)</th>
                <th>@(m.Estudiante.Nombres +" " + m.Estudiante.Apellido_Paterno + " " +  m.Estudiante.Apellido_Materno)</th>

                <th>@(m.Nombre)</th>
                <th>@(m.Clave )</th>
                <th>@(m.Nivel )</th>
                <th>@(m.Avatar )</th>
                <th>@(m.Estado == "A" ? "Activo" : "Inactivo")</th>


                <th>
                    <a href="~/Usuario/Ver/@m.ID_Usuario" class="btn btn-xs btn-warning">Detalles</a>
                    <a href="~/Usuario/AgregarEditar/@m.ID_Usuario" class="btn btn-xs btn-primary">Modificar</a>
                    <a onclick="return confirm('Esta seguro que desea eliminabr el registro?...');"
                       href="~/Usuario/Eliminar/@m.ID_Usuario" class="btn btn-xs btn-danger">Eliminar</a>
                </th>


            </tr>
        }
    </tbody>
</table>